@model WebApplication5.Models.RegisterModel

<div class="container text-center align-middle d-flex justify-content-center">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <h2>Регистрация</h2>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Email">Введите Email</label><br />
                <input type="email" required="" autofocus="" id="inputEmail" asp-for="Email" class="form-control" placeholder="Email адрес" />
                <span asp-validation-for="Email" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div>
                <h5 class="h3 mb-3 font-weight-normal">Введите пароль</h5>
                <input type="password" id="password-input" class="form-control" placeholder="Введите пароль" asp-for="Password" />
                <span asp-validation-for="Password" />
                <label><input type="checkbox" class="password-checkbox" />Показать пароль</label>
                <small id="emailHelp" class="form-text text-muted">Your password is our.</small>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input class="form-control" asp-for="ConfirmPassword" id="exampleInputPassword1" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="Регистрация" class="btn btn-primary btn-lg active" style="width: 200px;" role="button" aria-pressed="true" />
            </div>
        </div>
    </form>
</div>

