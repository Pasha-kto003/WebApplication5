@model WebApplication5.Models.User
@{
    ViewBag.Title = "О пользователе";
    ViewBag.Title = Model.Email;
}

<h2>Юзер @Model.Email</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Почта</dt>
        <dd>@Model.Email</dd>
        <dt>Роль</dt>
        <dd>@Model.Role</dd>
        <dt>Цена</dt>
        <dd>@Model.Password</dd>
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>
        <dt>Описание</dt>
    </dl>
</div>
