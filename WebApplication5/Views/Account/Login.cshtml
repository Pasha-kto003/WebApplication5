@model WebApplication5.Models.LoginModel


<div class="container text-center align-middle d-flex justify-content-center">

    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <h2>Вход на сайт</h2>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <h5 class="h3 mb-3 font-weight-normal">Введите логин/почту</h5>
                <input type="email" required="" autofocus="" id="inputEmail" asp-for="Email" class="form-control" placeholder="Email адрес" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <h5 class="h3 mb-3 font-weight-normal">Введите пароль</h5>
                <input type="password" id="password-input" class="form-control" placeholder="Введите пароль" asp-for="Password" />
                <span asp-validation-for="Password" />
                <label><input type="checkbox" class="password-checkbox" />Показать пароль</label>
            </div>
            <div class="form-group">
                <input type="submit" data-toggle="tooltip" data-placement="right" title="Если вы зарегистрированы на этом сайте то просто зайдите под своим логином и паролем" value="Войти" class="btn btn-primary btn-lg active" role="button" aria-pressed="true" style="width: 200px;" />
            </div>
            <a asp-action="Register" class="btn btn-primary btn-lg active" data-toggle="tooltip" data-placement="left" title="Для регистрации на нашем сайте нажмите эту кнопку" role="button" style="width: 200px;" aria-pressed="true" asp-controller="Account">
                Регистрация
            </a>
        </div>
    </form>
</div>

