@model WebApplication5.Models.Phone
@{
    ViewBag.Title = "Удаление Телефона";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название модели</dt>
        <dd>
            @Html.DisplayFor(model => model.Model)
        </dd>

        <dt>Компания</dt>
        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>ОС</dt>
        <dd>
            @Html.DisplayFor(model => model.OS)
        </dd>
        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>Год выпуска</dt>
        <dd>
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
    </dl>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Создать телефон
    </button>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Создать телефон</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Вы уверены что хотите создать телефон
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-secondary" value="Закрыть" data-dismiss="modal" />
                    <<input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </div>
        </div>
    </div>
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
